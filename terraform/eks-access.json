{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Action": [
                "eks:*",
                "iam:GetRole",
                "iam:ListRoles",
                "iam:PassRole",
                "sts:AssumeRole",
                "sts:GetCallerIdentity",
                "ec2:DescribeInstances",
                "ec2:DescribeRouteTables",
                "ec2:DescribeSecurityGroups",
                "ec2:DescribeSubnets",
                "ec2:DescribeVpcs",
                "cloudformation:ListStacks",
                "cloudformation:DescribeStacks"
            ],
            "Resource": "*"
        }
    ]
}
